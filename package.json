{
    "name": "vhdl-qqs",
    "displayName": "VHDL Quartus Questa Simulation",
    "publisher": "BakxY",
    "description": "VS Code extension to automate the process of generating testbenches for vhdl entities.",
    "repository": "https://github.com/BakxY/VHDL-QQS",
    "version": "0.3.0",
    "engines": {
        "vscode": "^1.97.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vhdl-qqs.generateTestBenchExplorer",
                "title": "Generate testbench by menu selection"
            },
            {
                "command": "vhdl-qqs.generateTestBenchSelection",
                "title": "Generate testbench by expression selection"
            },
            {
                "command": "vhdl-qqs.selectCurrentProject",
                "title": "Select quartus project"
            },
            {
                "command": "vhdl-qqs.compileCurrentProject",
                "title": "Compile quartus project"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "vhdl-qqs.generateTestBenchSelection",
                    "when": "editorHasSelection"
                }
            ]
        },
        "configuration": {
            "title": "VHDL-QQS",
            "properties": {
                "vhdl-qqs.tomlPath": {
                    "type": "string",
                    "default": "./vhdl_ls.toml",
                    "description": "The path to the toml file used for the current project"
                },
                "vhdl-qqs.quartusBinPath": {
                    "type": "string",
                    "default": "C:\\Program Files\\intelFPGA_lite\\23.1std\\quartus\\bin64",
                    "description": "The path to your quartus installations bin64 folder"
                },
                "vhdl-qqs.storeActiveProjectWorkspace": {
                    "type": "boolean",
                    "default": true,
                    "description": "Store the active set project in workspace storage"
                }
            }
        }
    },
    "files": [
        "out/",
        "res/",
        "LICENSE"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.97.0",
        "@typescript-eslint/eslint-plugin": "^8.22.0",
        "@typescript-eslint/parser": "^8.22.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.19.0",
        "typescript": "^5.7.3"
    },
    "dependencies": {
        "@iarna/toml": "^2.2.5",
        "@vscode/vsce": "^3.2.2"
    }
}
